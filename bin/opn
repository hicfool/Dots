clear
printf "\033[34m.-----------.\n"
printf "| \033[33m.-..-..-.\033[34m |\n"
printf "| \033[33m| ||_|| |\033[34m :--> it doesn't do much ;(\n"
printf "| \033[33m'-''  ' '\033[34m |\n"
printf "|,----------'\n"
printf "|\n"
printf "|\n"
printf "'-> \033[33m" && read pname
printf "."            && sleep 0.02
printf "\n.."         && sleep 0.02
printf "\n..."        && sleep 0.02
printf "\n.."         && sleep 0.02
printf "\n.\n"        && sleep 0.02
systemd-run --user --setenv DISPLAY $pname
